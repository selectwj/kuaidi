<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>servlet_yc.helloServlet</servlet-class>

        <init-param>
            <param-name>namespace</param-name>
            <param-value>root</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>servlet_yc.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/userServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SearchPackageServlet</servlet-name>
        <servlet-class>servlet_yc.SearchPackageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchPackageServlet</servlet-name>
        <url-pattern>/searchPackageServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StaffServlet</servlet-name>
        <servlet-class>servlet_yc.StaffServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StaffServlet</servlet-name>
        <url-pattern>/staffServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StationServlet</servlet-name>
        <servlet-class>servlet_yc.StationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StationServlet</servlet-name>
        <url-pattern>/stationServlet</url-pattern>
    </servlet-mapping>
</web-app>